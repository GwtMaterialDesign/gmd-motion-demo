<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:m="urn:import:gwt.material.design.client.ui"
			 xmlns:ma="urn:import:gwt.material.design.addins.client">

	<m:MaterialRow>
		<!-- Todays money -->
		<m:MaterialColumn grid="s3">
			<m:MaterialCard padding="12">
				<m:MaterialCardContent>
					<m:MaterialRow marginBottom="0">
						<m:MaterialPanel float="LEFT">
							<m:MaterialLabel text="TODAYS MONEY" fontSize="0.8em" secondary="true"/>
							<m:MaterialPanel>
								<m:MaterialLabel text="$24,000" fontSize="1.6em" display="INLINE_BLOCK" marginRight="12"/>
								<m:MaterialLabel text="+4%" textColor="GREEN_DARKEN_1" display="INLINE_BLOCK"/>
							</m:MaterialPanel>
						</m:MaterialPanel>
						<m:MaterialIcon iconType="ATTACH_MONEY" circle="true" fontSize="1.6em" padding="12" float="RIGHT" backgroundColor="INDIGO_LIGHTEN_1"/>
					</m:MaterialRow>
				</m:MaterialCardContent>
			</m:MaterialCard>
		</m:MaterialColumn>

		<!-- New Project -->
		<m:MaterialColumn grid="s3">
			<m:MaterialCard padding="12">
				<m:MaterialCardContent>
					<m:MaterialRow marginBottom="0">
						<m:MaterialPanel float="LEFT">
							<m:MaterialLabel text="NEW PROJECTS" fontSize="0.8em" secondary="true"/>
							<m:MaterialPanel>
								<m:MaterialLabel text="12" fontSize="1.6em" display="INLINE_BLOCK" marginRight="12"/>
								<m:MaterialLabel text="-10%" textColor="RED_DARKEN_1" display="INLINE_BLOCK"/>
							</m:MaterialPanel>
						</m:MaterialPanel>
						<m:MaterialIcon iconType="FOLDER_OPEN" circle="true" fontSize="1.6em" padding="12" float="RIGHT" backgroundColor="INDIGO_LIGHTEN_1"/>
					</m:MaterialRow>
				</m:MaterialCardContent>
			</m:MaterialCard>
		</m:MaterialColumn>

		<!-- System Health -->
		<m:MaterialColumn grid="s3">
			<m:MaterialCard padding="12">
				<m:MaterialCardContent>
					<m:MaterialLabel text="SYSTEM HEALTH" fontSize="0.8em" secondary="true"/>
					<m:MaterialRow marginBottom="0">
						<m:MaterialLabel grid="s4" text="90%" fontSize="1.6em" />
						<m:MaterialProgress grid="s8" type="DETERMINATE" percent="97" marginTop="16"/>
					</m:MaterialRow>
				</m:MaterialCardContent>
			</m:MaterialCard>
		</m:MaterialColumn>

		<!-- ROI Per Customer -->
		<m:MaterialColumn grid="s3">
			<m:MaterialCard padding="12" backgroundColor="INDIGO_LIGHTEN_1">
				<m:MaterialCardContent>
					<m:MaterialRow marginBottom="0">
						<m:MaterialPanel float="LEFT">
							<m:MaterialLabel text="ROI PER CUSTOMER" fontSize="0.8em" textColor="WHITE"/>
							<m:MaterialLabel text="$25.50" fontSize="1.6em" textColor="WHITE"/>
						</m:MaterialPanel>
						<m:MaterialIcon iconType="ATTACH_MONEY" circle="true" fontSize="1.6em" padding="12" float="RIGHT" textColor="INDIGO_LIGHTEN_1" backgroundColor="WHITE"/>
					</m:MaterialRow>
				</m:MaterialCardContent>
			</m:MaterialCard>
		</m:MaterialColumn>
	</m:MaterialRow>
</ui:UiBinder> 