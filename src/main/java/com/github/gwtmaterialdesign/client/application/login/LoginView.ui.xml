<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:m="urn:import:gwt.material.design.client.ui">

	<m:MaterialRow containerEnabled="true" textAlign="CENTER" valignWrapper="true" height="80vh">
		<m:MaterialPanel width="100%" >
			<m:MaterialRow>
				<m:MaterialImage ui:field="image" circle="true"/>
				<m:MaterialLabel ui:field="name" fontSize="2em"/>
				<m:MaterialLabel text="Sign in with your account" opacity="0.8" fontSize="0.8em"/>
			</m:MaterialRow>

			<m:MaterialRow>
				<m:MaterialColumn grid="s4" offset="s4">
					<m:MaterialTextBox label="Email or phone number" fieldType="OUTLINED"/>
					<m:MaterialTextBox label="Password" type="PASSWORD" fieldType="OUTLINED"/>
				</m:MaterialColumn>

				<m:MaterialColumn grid="s4" offset="s4" textAlign="LEFT">
					<m:MaterialAnchorButton href="#dashboard" text="Sign In" width="100%" waves="DEFAULT"/>
					<m:MaterialLink text="Forgot email?" display="BLOCK" marginTop="12"/>
					<m:MaterialLink text="Create account?" display="BLOCK" marginTop="12"/>
				</m:MaterialColumn>
			</m:MaterialRow>
		</m:MaterialPanel>
	</m:MaterialRow>
</ui:UiBinder>
